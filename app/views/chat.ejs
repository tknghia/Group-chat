<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./design/head.ejs %>
</head>
<body>
  <% include ./design/header.ejs %>

  <main>
    <div class="container-fluid">
      <input type="hidden" id="user" value="<%= user.username %>"/>
      <div class="row">
        <div class="col-sm-4">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h4>Users </h4>
            </div>
            <div class="panel-body" id="scrl1">
              <ul id="list"></ul>
            </div>
            <div class="panel-footer">
              <p id="typing"></p>
            </div>
          </div>
        </div>
        <div class=".space"></div>
        <div class="col-sm-8">
          <div class="panel panel-success">
            <div class="panel-heading">
              <h4 id="frndName">Chat Room</h4>
            </div>
            <div class="panel-body" id="scrl2">
              <p id="loading">Wait Some Moment...!</p>
              <p id="noChat">Sorry! No Chats Are Available...!</p>
              <p id="initMsg">Select Particular User Or Group To Start Chatting...!</p>
              <ul id="messages"></ul>
            </div>
            <div class="panel-footer">
              <form id="chatForm" action="">
                <input id="myMsg" class="input-box-send" autocomplete="off" placeholder="Write Message Here.." />
                <button id="sendBtn" class="btn btn-send"><span class="glyphicon glyphicon-send"></span></button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </main>

  <% include ./design/footer.ejs %>

  <script src="/js/scriptForChat.js"></script>
</body>
</html>
